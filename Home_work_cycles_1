using System;

namespace ConsoleApp13
{
    class Program
    {
        static void Main(string[] args)
        {
            string message;
            int showTime;

            Console.Write("Введите сообщение для вывода: ");
            message = Console.ReadLine();

            Console.Write("Сколько раз Вы хотите его вывести? ");
            showTime = Convert.ToInt32(Console.ReadLine());

            while(showTime > 0)
            {
                Console.WriteLine(message);
                showTime--;
            }

        }
    }
}
