class Player
{
    public string Name { get; private set; }

    public int Age { get; private set; }

    public Weapon Weapon { get; private set; }

    public Mover Mover { get; private set; }

    public void Move()
    {
        Mover.Move();
    }

    public void Attack()
    {
        Weapon.Attack();
    }
}

